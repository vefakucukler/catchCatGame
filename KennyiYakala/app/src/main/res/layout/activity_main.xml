        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="skorArtir"
            app:srcCompat="@drawable/kedi" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="120dp"
            android:layout_height="110dp"
